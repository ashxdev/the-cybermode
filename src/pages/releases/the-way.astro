---
import Layout from '../../layouts/Layout.astro'

import { Image } from 'astro:assets'
import singleCover from '../../assets/img/cybermode-theway.png'
import logo from '/public/logo.png'
import icon from '/public/icon.png'

---

<Layout title="Сінгл Шлях">

  <div class="flex flex-col min-h-[100dvh] dark:bg-muted dark:text-muted-foreground">
    <header
     class="bg-white px-4 py-3 sm:flex items-center justify-between dark:bg-neutral-900 dark:text-white"
    >
      <a class="flex items-center gap-2" href="#">
        <Image
        src={icon}
        class=" w-20"
        alt="Album Cover"
      />
        <Image
        src={logo}
        class=" w-60 "
        alt="Album Cover"
      />
      </a>
      <nav class="flex items-center gap-4">
        <a class="text-muted-foreground hover:underline dark:text-white" href="/">Home </a>
        <a class="text-muted-foreground hover:underline dark:text-white" href="#">Library </a>
        <a class="text-muted-foreground hover:underline dark:text-white" href="#">Radio </a>
      </nav>
    </header>
    <div
      class="flex flex-col items-center justify-center flex-1 bg-background px-4 py-12 sm:px-6 lg:px-8 dark:bg-muted"
    >
      <div class="w-full max-w-xl">
        <div
          class="rounded border bg-white text-card-foreground shadow-sm dark:bg-neutral-900 dark:text-white"
          data-v0-t="card"
        >
          <div class="p-6">
            <div class="flex flex-col items-center space-y-4">
              <Image
                src={singleCover}
                class="rounded shadow-lg w-fit h-[300px] sm:h-[400px] object-cover"
                alt="Album Cover"
                style="aspect-ratio: 300 / 300; object-fit: cover;"
              />
              <div class="space-y-2 text-center">
                <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Шлях</h2>
                <p class="text-muted-foreground dark:text-muted-foreground">The Cybermode</p>
              </div>
              <a
                href="https://www.youtube.com/watch?v=uJzkCZW-0gU"
                class="inline-flex items-center justify-center rounded-md bg-rose-600 px-6 py-2 text-sm font-medium text-white shadow-sm transition-colors hover:bg-rose-600/90 focus:outline-none focus:ring-2 focus:ring-rose-600 focus:ring-offset-2 dark:bg-rose-600 dark:text-white"
              >
                Listen
              </a>
              <div class="flex items-center gap-4">
                <a class="text-muted-foreground hover:underline" target="_blank" href="https://www.youtube.com/watch?v=uJzkCZW-0gU">
                  <svg xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-youtube"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M2 8a4 4 0 0 1 4 -4h12a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-12a4 4 0 0 1 -4 -4v-8z" /><path d="M10 9l5 3l-5 3z" /></svg>
                </a>
                <a class="text-muted-foreground hover:underline" target="_blank" href="https://www.tiktok.com/@thecybermode">
                  <svg xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-tiktok"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M21 7.917v4.034a9.948 9.948 0 0 1 -5 -1.951v4.5a6.5 6.5 0 1 1 -8 -6.326v4.326a2.5 2.5 0 1 0 4 2v-11.5h4.083a6.005 6.005 0 0 0 4.917 4.917z" /></svg>
                </a>
                <a class="text-muted-foreground hover:underline dark:text-white" target="_blank" href="https://www.facebook.com/thecybermode/">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="w-6 h-6"
                  >
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                    ></path>
                  </svg>
                </a>
                <a class="text-muted-foreground hover:underline dark:text-white" target="_blank" href="https://www.instagram.com/thecybermode?igsh=MTNrMG94YzQ3cnoxbg%3D%3D&utm_source=qr">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="w-6 h-6"
                  >
                    <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
                  </svg>
                </a>
                <a class="text-muted-foreground hover:underline dark:text-white" target="_blank" href="https://x.com/thecybermode">
                  <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-x"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 4l11.733 16h4.267l-11.733 -16z" /><path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" /></svg>
                </a>
               </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer
      class="bg-muted px-4 py-3 flex items-center justify-between dark:bg-neutral-900 dark:text-white"
    >
      <div class="text-muted-foreground text-sm dark:text-muted-foreground">
        © 2024 Simple Solution Guru. All rights reserved.
      </div>
      <nav class="flex items-center gap-4">
        <a class="text-muted-foreground hover:underline dark:text-white" href="#"> Privacy </a>
        <a class="text-muted-foreground hover:underline dark:text-white" href="#"> Terms </a>
      </nav>
    </footer>
  </div>
</Layout>
